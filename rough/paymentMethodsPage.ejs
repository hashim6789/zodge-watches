    <script>
      document
        .getElementById("paymentForm")
        .addEventListener("submit", function (event) {
          const paymentMethods = document.getElementsByName(
            "selectedPaymentMethod"
          );
          let selected = false;

          // Loop through radio buttons to check if any are selected
          for (let i = 0; i < paymentMethods.length; i++) {
            if (paymentMethods[i].checked) {
              selected = true;
              break;
            }
          }

          // If no radio button is selected, prevent form submission and show a message
          if (!selected) {
            event.preventDefault(); // Prevent form submission
            alert(
              "Please select a payment method before proceeding to the summary."
            );
          }
        });
    </script>
    <script>
      $(".js-select2").each(function () {
        $(this).select2({
          minimumResultsForSearch: 20,
          dropdownParent: $(this).next(".dropDownSelect2"),
        });
      });
    </script>
