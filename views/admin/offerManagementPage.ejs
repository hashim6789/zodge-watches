                                data-offerImage="<%= offer.image %>"
                                data-offerApplicableType="<%= offer.applicableType %>"
                                data-offerName="<%= offer.name %>"
                                data-offerDescription="<%= offer.description %>"
                                data-discountValue="<%= offer.discountValue %>"
