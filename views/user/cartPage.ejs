    <script>
      function removeFromCart(productId) {
        console.log(productId);
        if (confirm("Are you sure?")) {
          axios
            .delete(`/user/shop/cart/delete-product/${productId}`)
            .then((response) => {
              console.log("product deleted fron the cart", response.data);
              location.reload();
            })
            .catch((err) => {
              console.error("Error deleting product from the cart:", err);
            });
        }
      }
    </script>
