<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Shoping Cart</title>
    <%- include('partials/_header') %>
  </head>
  <body class="animsition">
    <!-- Header -->
    <%- include('partials/_navbar', {user, wishlist, cart}) %>

    <!-- Wishlist -->
    <%- include('partials/_wishlist', {wishlist}) %>

    <!-- Cart -->

    <!-- breadcrumb -->
    <div class="container pt-5">
      <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
          Home
          <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4"> Shoping Cart </span>
      </div>
    </div>
    <% console.log(cart.products[0])%>

    <!-- Shopping Cart -->
    <form class="bg0 p-t-75 p-b-85" action="/cart" method="post">
      <div class="container">
        <div class="row">
          <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
            <div class="m-l-25 m-r--38 m-lr-0-xl">
              <% if (cart.products.length > 0) { %>
              <!-- Cart is not empty, show cart items -->
              <div class="wrap-table-shopping-cart">
                <table class="table-shopping-cart">
                  <tr class="table_head">
                    <th class="column-1">Product</th>
                    <th class="column-2"></th>
                    <th class="column-3">Price</th>
                    <th class="column-4">Quantity</th>
                    <th class="column-5">Total</th>
                    <th class="column-6">Remove</th>
                  </tr>

                  <% cart.products.forEach(function(product) { %>
                  <tr
                    class="table_row"
                    data-product-id="<%= product.productId._id %>"
                  >
                    <td class="column-1">
                      <div class="how-itemcart1">
                        <button
                          id="cartProduct"
                          data-product-id="<%= product.productId._id %>"
                        >
                          <img
                            src="/public/uploads/<%= product.productId.images[0] %>"
                            alt="IMG"
                          />
                        </button>
                      </div>
                    </td>
                    <td class="column-2"><%= product.productId.name %></td>
                    <td class="column-3">₹ <%= product.price.toFixed(2) %></td>
                    <td class="column-4">
                      <div class="wrap-num-product flex-w m-l-auto m-r-0">
                        <div
                          class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m"
                          onclick="updateQuantity('<%= product.productId._id %>', -1, '<%= product.productId.stock %>')"
                        >
                          <i class="fs-16 zmdi zmdi-minus"></i>
                        </div>
                        <input
                          class="mtext-104 cl3 txt-center num-product"
                          type="number"
                          name="num-product<%= product.productId._id %>"
                          value="<%= product.quantity %>"
                          data-stock="<%= product.productId.stock %>"
                          disabled
                        />
                        <div
                          class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m"
                          onclick="updateQuantity('<%= product.productId._id %>', 1, '<%= product.productId.stock %>')"
                        >
                          <i class="fs-16 zmdi zmdi-plus"></i>
                        </div>
                      </div>
                      <div
                        id="feedback-<%= product.productId._id %>"
                        class="invalid-feedback"
                        style="display: none; color: red"
                      >
                        Quantity exceeds available stock.
                      </div>
                    </td>
                    <td class="column-5">
                      ₹
                      <span id="totalPrice-<%= product.productId._id%>">
                        <%= (product.price * product.quantity).toFixed(2) %>
                      </span>
                    </td>
                    <td class="column-6">
                      <button
                        class="btn-delete-product"
                        onclick="removeFromCart('<%= product.productId._id %>')"
                        title="Remove item"
                      >
                        <i class="zmdi zmdi-delete p-3 fs-20"></i>
                      </button>
                    </td>
                  </tr>
                  <% }) %>
                </table>
              </div>
              <div
                class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm"
              >
                <div class="flex-w flex-m m-r-20 m-tb-5">
                  <input
                    id="couponCode"
                    class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5"
                    type="text"
                    name="coupon"
                    placeholder="Coupon Code"
                  />
                  <button
                    class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5"
                    id="applyCouponBtn"
                    type="button"
                  >
                    Apply coupon
                  </button>
                </div>

                <button
                  class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10"
                  type="button"
                  onclick="removeCoupon()"
                >
                  Remove Coupon
                </button>
              </div>
              <% } else { %>
              <div class="text-center">
                <p class="mtext-103 cl2">Your cart is currently empty.</p>
                <a
                  href="/"
                  class="flex-c-m stext-101 cl2 size-116 bg8 bor14 hov-btn3 p-lr-15 trans-04 pointer m-tb-10"
                  >Continue Shopping</a
                >
              </div>
              <% } %>
              <!-- Remaining cart details -->
            </div>
          </div>

          <!-- Cart totals section -->
          <% if (cart.products.length > 0) { %>
          <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
            <div
              class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm"
            >
              <h4 class="mtext-109 cl2 p-b-30">Cart Totals</h4>
              <!-- Subtotal -->
              <div class="flex-w flex-t bor12 p-b-13">
                <div class="size-208">
                  <span class="stext-110 cl2"> Subtotal: </span>
                </div>
                <div class="size-209">
                  <span id="subtotal" class="mtext-110 cl2">
                    ₹ <%= cart.products.reduce((acc, product) => acc +=
                    (product.price * product.quantity), 0).toFixed(2) %>
                  </span>
                </div>
              </div>

              <!-- Coupon Discount Field -->
              <div class="flex-w flex-t p-t-15 p-b-13">
                <div class="size-208">
                  <span class="stext-110 cl2"> Coupon Discount: </span>
                </div>
                <div class="size-209">
                  <span id="couponDiscountAmount" class="mtext-110 cl2">
                    ₹ <%= cart.coupon.discountAmount || "0.00" %>
                  </span>
                </div>
              </div>

              <!-- Total -->
              <div class="flex-w flex-t p-t-27 p-b-33">
                <div class="size-208">
                  <span class="mtext-101 cl2"> Total: </span>
                </div>
                <div class="size-209 p-t-1">
                  <span id="totalAmount" class="mtext-110 cl2">
                    ₹ <%= (cart.totalPrice).toFixed(2) %>
                  </span>
                </div>
              </div>
              <button
                class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer"
              >
                Proceed to Checkout
              </button>
            </div>
          </div>
          <% } %>

          <!-- Add a section to display the coupon discount, if applied -->
          <div
            id="couponFeedback"
            class="stext-101 cl2 m-tb-10"
            style="display: none"
          >
            Coupon applied! Discount: ₹ <span id="couponDiscount"></span>
          </div>

          <!-- Error message for invalid coupon -->
          <div
            id="invalidCouponFeedback"
            class="invalid-feedback"
            style="display: none; color: red"
          >
            Invalid or expired coupon code.
          </div>

          <!-- Hidden field to store discount amount -->
          <input type="hidden" id="discountAmount" value="0" />
        </div>
      </div>
    </form>

    <!-- Footer -->
    <%- include('partials/_footer') %>

    <!-- Back to top -->
    <div class="btn-back-to-top" id="myBtn">
      <span class="symbol-btn-back-to-top">
        <i class="zmdi zmdi-chevron-up"></i>
      </span>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
      document
        .getElementById("applyCouponBtn")
        .addEventListener("click", function () {
          const couponCode = document.getElementById("couponCode").value;

          if (couponCode) {
            axios
              .post("/cart/coupon/apply", { couponCode })
              .then((response) => {
                if (response.data.success) {
                  const originalCart = response.data.cart;
                  const coupon = originalCart.coupon;
                  console.log(coupon);

                  let discountAmount =
                    (coupon.discountPercentage / 100) *
                    parseFloat(
                      document
                        .getElementById("subtotal")
                        .innerText.replace("₹ ", "")
                    );

                  if (discountAmount > coupon.maxDiscountAmount) {
                    discountAmount = coupon.maxDiscountAmount;
                  }

                  console.log(discountAmount);

                  const subtotal = parseFloat(
                    document
                      .getElementById("subtotal")
                      .innerText.replace("₹ ", "")
                  );
                  const newTotal = subtotal - discountAmount;

                  document.getElementById(
                    "couponDiscountAmount"
                  ).innerText = `₹ ${discountAmount.toFixed(2)}`;
                  document.getElementById(
                    "totalAmount"
                  ).innerText = `₹ ${newTotal.toFixed(2)}`;

                  let cart = JSON.parse(localStorage.getItem("cart")) || {
                    products: [],
                    totalPrice: 0,
                    coupon: null,
                    address: null,
                  };

                  cart.coupon = {
                    code: couponCode,
                    discountPercentage: coupon.discountPercentage,
                    discountAmount: discountAmount,
                    maxDiscountAmount: coupon.maxDiscountAmount,
                  };

                  cart.totalPrice = newTotal;

                  localStorage.setItem("cart", JSON.stringify(cart));

                  Swal.fire({
                    icon: "success",
                    title: "Coupon applied successfully",
                    text: `Discount: ₹ ${discountAmount.toFixed(2)}`,
                    confirmButtonText: "OK",
                  });
                } else {
                  Swal.fire({
                    icon: "error",
                    title: "Invalid Coupon",
                    text: "The coupon code you entered is not valid or has expired.",
                    confirmButtonText: "OK",
                  });

                  document.getElementById(
                    "invalidCouponFeedback"
                  ).style.display = "block";
                }
              })
              .catch((error) => {
                console.error(error);

                Swal.fire({
                  icon: "error",
                  title: "Error",
                  text: error.response.data.message,
                  confirmButtonText: "OK",
                });
              });
          } else {
            Swal.fire({
              icon: "warning",
              title: "No Coupon Code",
              text: "Please enter a coupon code before applying.",
              confirmButtonText: "OK",
            });
          }
        });

      function removeCoupon() {
        const subtotal = parseFloat(
          document.getElementById("subtotal").innerText.replace("₹ ", "")
        );

        // Clear coupon input and reset discount display
        document.getElementById("couponCode").value = "";
        document.getElementById("couponDiscountAmount").innerText = "₹ 0.00";

        document.getElementById(
          "totalAmount"
        ).innerText = `₹ ${subtotal.toFixed(2)}`;

        // Retrieve the cart from localStorage
        let cart = JSON.parse(localStorage.getItem("cart")) || {
          products: [],
          totalPrice: 0,
          coupon: null,
          address: null,
        };

        // Remove coupon data from the cart
        delete cart.coupon;
        cart.totalPrice = subtotal;

        // Update the cart in localStorage
        localStorage.setItem("cart", JSON.stringify(cart));

        // Make an Axios request to the backend to remove the coupon
        axios
          .delete("/cart/coupon/remove") // Adjust the route based on your backend API
          .then((response) => {
            if (response.data.success) {
              Swal.fire({
                icon: "success",
                title: "Coupon removed successfully",
                confirmButtonText: "OK",
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Failed to remove coupon",
                text: response.data.message,
                confirmButtonText: "OK",
              });
            }
          })
          .catch((error) => {
            console.error("Error removing coupon:", error);
            Swal.fire({
              icon: "error",
              title: "Server error",
              text: "Could not remove the coupon. Please try again.",
              confirmButtonText: "OK",
            });
          });
      }
    </script>

    <!--===============================================================================================-->
    <script src="/public/user/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="/public/user/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="/public/user/vendor/bootstrap/js/popper.js"></script>
    <script src="/public/user/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="/public/user/vendor/select2/select2.min.js"></script>
    <script>
      $(".js-select2").each(function () {
        $(this).select2({
          minimumResultsForSearch: 20,
          dropdownParent: $(this).next(".dropDownSelect2"),
        });
      });
    </script>
    <!--===============================================================================================-->
    <script src="/public/user/vendor/MagnificPopup/jquery.magnific-popup.min.js"></script>
    <!--===============================================================================================-->
    <script src="/public/user/vendor/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script>
      $(".js-pscroll").each(function () {
        $(this).css("position", "relative");
        $(this).css("overflow", "hidden");
        var ps = new PerfectScrollbar(this, {
          wheelSpeed: 1,
          scrollingThreshold: 1000,
          wheelPropagation: false,
        });

        $(window).on("resize", function () {
          ps.update();
        });
      });
    </script>
    <!--===============================================================================================-->
    <script src="/public/user/js/cartManagemnt.js"></script>
    <script src="/public/user/js/main.js"></script>
  </body>
</html>
