<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Order Confirmed</title>
    <%- include('partials/_header') %>
    <style>
      /* Place the confirmation card styles here */
      .confirmation-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 40px;
        text-align: center;
        max-width: 400px;
        margin: 0 auto;
      }
      .icon-circle {
        background-color: #e0f0f0;
        border-radius: 50%;
        width: 80px;
        height: 80px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto 20px;
      }
      .icon {
        width: 40px;
        height: 40px;
      }
      h1 {
        color: #2cc;
        margin-bottom: 20px;
      }
      p {
        color: #666;
        line-height: 1.6;
      }
      .btn {
        background-color: #2cc;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 20px;
      }
    </style>
  </head>
  <body class="animsition">
    <!-- Header -->
    <%- include('partials/_navbar', {user, wishlist, cart}) %>

    <!-- Wishlist -->
    <%- include('partials/_wishlist', {wishlist}) %>

    <!-- Order Confirmation Content -->
    <div
      class="container"
      style="
        display: flex;
        justify-content: center;
        align-items: center;
        height: 500px;
      "
    >
      <div class="confirmation-card">
        <div class="icon-circle">
          <img
            src="/public/user/images/icons/zodge_logo.svg"
            alt="Shopping cart checkmark"
            class="icon"
          />
        </div>
        <h1>ORDER CONFIRMED!</h1>
        <p>
          Your order number is <%= orderId %>. Your order was placed
          successfully and you will soon receive your order confirmation via
          email.
        </p>
        <a href="/profile/<%= user._id %>" class="btn">View order details</a>
      </div>
    </div>

    <!-- Footer -->
    <%- include('partials/_footer') %>

    <!-- Back to top -->
    <div class="btn-back-to-top" id="myBtn">
      <span class="symbol-btn-back-to-top">
        <i class="zmdi zmdi-chevron-up"></i>
      </span>
    </div>
    <%- include('partials/_scripts') %>
  </body>
</html>
