                  </div>
                  <div class="delivery-status">
                    ${
                      order.orderStatus === "delivered"
                        ? `
                        <div class="delivered">
                          Delivered on ${new Date(
                            order.createdAt
                          ).toLocaleDateString("en-IN", {
                            month: "short",
                            day: "numeric",
                            year: "numeric",
                          })}
                        </div>
                        <div>Your item has been delivered</div>
                      `
                        : order.orderStatus === "pending"
                        ? `
