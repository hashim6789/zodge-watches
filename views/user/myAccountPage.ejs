      document
        .getElementById("verifyEmailBtn")
        .addEventListener("click", function (e) {
          e.preventDefault();

          const userId = document.getElementById("editUserId").value;
          const email = document.getElementById("userMail").value;
          const verifyButton = this; // Reference to the button

          // Disable the button to prevent multiple clicks
          verifyButton.disabled = true;

          // Send the verify email request
          axios
            .post("/auth/api/send-otp", { userId, email })
            .then((response) => {
              if (response.data.success) {
                setTimeout(() => {
                  // Show the OTP modal
                  document.getElementById("otpModal").style.display = "block";
                  initializeOtpInputs(); // Initialize OTP input functionality
                }, 300);
              } else {
                alert("Error sending verification email");
              }
            })
            .catch((error) => {
              console.error("Error:", error);
              alert("Failed to send verification email");
            })
            .finally(() => {
              // Re-enable the button after the request is complete
              verifyButton.disabled = false;
            });
        });

      // OTP Input Handling
      function initializeOtpInputs() {
        const otpInputs = document.querySelectorAll(".otp-input");
        otpInputs.forEach((input, index) => {
          input.addEventListener("input", (e) =>
            handleOtpInputChange(e, index, otpInputs)
          );
          input.addEventListener("keydown", (e) =>
            handleOtpBackspace(e, index, otpInputs)
          );
        });

        // Handle form submission
        document
          .getElementById("otpForm")
          .addEventListener("submit", handleOtpFormSubmit);

        // Handle resend OTP link click
        document
          .getElementById("resendOtpLink")
          .addEventListener("click", handleResendOtp);

        // Close modal
        document
          .getElementById("closeModal")
          .addEventListener("click", function () {
            document.getElementById("otpModal").style.display = "none";
          });

        // Start the resend timer
        startTimer(60);
      }

      function handleOtpInputChange(e, index, otpInputs) {
        if (e.inputType === "deleteContentBackward" && index > 0) {
          otpInputs[index - 1].focus();
        } else if (
          otpInputs[index].value.length === 1 &&
          index < otpInputs.length - 1
        ) {
          otpInputs[index + 1].focus();
        }
      }

      function handleOtpBackspace(e, index, otpInputs) {
        if (
          e.key === "Backspace" &&
          otpInputs[index].value.length === 0 &&
          index > 0
        ) {
          otpInputs[index - 1].focus();
        }
      }

      async function handleOtpFormSubmit(e) {
        e.preventDefault();
        const otpValue = Array.from(document.querySelectorAll(".otp-input"))
          .map((input) => input.value)
          .join("");

        if (otpValue.length === 6) {
          try {
            const response = await axios.post("/auth/api/verify-otp", {
              otp: otpValue,
            });
            alert("OTP verified successfully!");
            document.getElementById("otpModal").style.display = "none";
          } catch (error) {
            alert("OTP verification failed. Please try again.");
          }
        } else {
          alert("Please enter a valid 6-digit OTP");
        }
      }

      async function handleResendOtp(e) {
        e.preventDefault();
        try {
          const response = await axios.post("/auth/api/resend-otp");
          alert("OTP resent successfully!");
          document.getElementById("resendOtpLink").style.display = "none"; // Hide resend link
          startTimer(60); // Restart timer
        } catch (error) {
          alert("Failed to resend OTP. Please try again.");
        }
      }

      // Timer for resend OTP
      function startTimer(duration) {
        const countdownElement = document.getElementById("countdown");
        const resendLink = document.getElementById("resendOtpLink");
        let timeRemaining = duration;

        const interval = setInterval(() => {
          timeRemaining--;
          countdownElement.textContent = timeRemaining;

          if (timeRemaining <= 0) {
            clearInterval(interval);
            resendLink.style.display = "inline"; // Show the resend link after time runs out
          }
        }, 1000);
      }
