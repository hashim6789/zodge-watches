<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Payment Failed</title>
    <%- include('partials/_header') %>
    <!-- Include Bootstrap CSS for styling -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body class="animsition">
    <!-- Header -->
    <%- include('partials/_navbar', {user, wishlist, cart}) %>

    <!-- Payment Failed Content -->
    <div class="container mt-5 mb-5">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
          <div class="card">
            <div class="card-header text-center bg-danger text-white">
              <h2>Payment Failed</h2>
            </div>
            <div class="card-body">
              <h5 class="text-center text-danger">
                Oops! Your payment couldn't be processed.
              </h5>
              <p class="text-center">
                Unfortunately, the payment for your order failed. Please retry
                using one of the options below.
              </p>
              <hr />

              <!-- Order Details -->
              <h5 class="mt-4">Order Details</h5>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <strong>Order ID:</strong> <%= order.orderId %>
                </li>
                <li class="list-group-item">
                  <strong>Date:</strong> <%= new
                  Date(order.createdAt).toLocaleDateString() %>
                </li>
                <li class="list-group-item">
                  <strong>Payment Method:</strong> <%= order.paymentMethod %>
                </li>
                <li class="list-group-item">
                  <strong>Total Amount:</strong> ₹<%= order.totalPrice %>
                </li>
              </ul>
              <hr />

              <!-- Shipping Address -->
              <h5 class="mt-4">Shipping Address</h5>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <strong>Name:</strong> <%= order.address.firstName %> <%=
                  order.address.lastName %>
                </li>
                <li class="list-group-item">
                  <strong>Address:</strong> <%= order.address.addressLine %>,
                  <%= order.address.flatNo %>
                </li>
                <li class="list-group-item">
                  <strong>City:</strong> <%= order.address.city %>
                </li>
                <li class="list-group-item">
                  <strong>State:</strong> <%= order.address.state %>
                </li>
                <li class="list-group-item">
                  <strong>Country:</strong> <%= order.address.country %>
                </li>
                <li class="list-group-item">
                  <strong>Pincode:</strong> <%= order.address.pincode %>
                </li>
                <li class="list-group-item">
                  <strong>Phone:</strong> <%= order.address.phoneNo %>
                </li>
              </ul>
              <hr />

              <!-- Product Details -->
              <h5 class="mt-4">Products</h5>
              <ul class="list-group list-group-flush">
                <% order.products.forEach(product => { %>
                <li
                  class="list-group-item d-flex justify-content-between align-items-center"
                >
                  <span><%= product.productId.name %></span>
                  <span>₹<%= product.price %></span>
                </li>
                <% }) %>
              </ul>
              <hr />

              <!-- Retry Payment Section -->
              <div class="text-center mt-4">
                <h5>Retry Payment</h5>
                <p>
                  Select one of the payment options below to retry your payment:
                </p>
                <form id="retryPaymentForm">
                  <div class="form-group">
                    <label for="paymentMethod">Choose Payment Method</label>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="paymentMethod"
                        id="walletPayment"
                        value="wallet"
                      />
                      <label class="form-check-label" for="walletPayment">
                        Wallet
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="paymentMethod"
                        id="onlinePayment"
                        value="onlinePayment"
                        checked
                      />
                      <label class="form-check-label" for="onlinePayment">
                        Online Payment
                      </label>
                    </div>
                  </div>
                  <button
                    type="button"
                    class="btn btn-primary btn-block"
                    onclick="retryPayment('<%= order.orderId %>')"
                  >
                    Retry Payment
                  </button>
                </form>
                <hr />
                <div class="mt-3">
                  <p class="text-center">Or</p>
                  <a href="/" class="btn btn-secondary btn-block">
                    Back to Home
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include('partials/_footer') %>

    <!-- Back to top -->
    <div class="btn-back-to-top" id="myBtn">
      <span class="symbol-btn-back-to-top">
        <i class="zmdi zmdi-chevron-up"></i>
      </span>
    </div>
    <%- include('partials/_scripts') %>
    <script>
      function retryPayment(orderId) {
        const selectedPaymentMethod = document.querySelector(
          'input[name="paymentMethod"]:checked'
        ).value;

        if (selectedPaymentMethod === "wallet") {
          Swal.fire({
            title: "Confirm Wallet Payment",
            text: "Are you sure you want to pay using your wallet balance?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, pay with wallet!",
          }).then((result) => {
            if (result.isConfirmed) {
              // Handle Wallet payment logic here
              handlePayment(orderId, "wallet");
            }
          });
        } else if (selectedPaymentMethod === "onlinePayment") {
          // Handle online payment retry
          handlePayment(orderId, "onlinePayment");
        }
      }

      function handlePayment(orderId, paymentMethod) {
        axios
          .post("/checkout/retry", {
            orderId: orderId,
            paymentMethod: paymentMethod,
          })
          .then((response) => {
            if (paymentMethod === "onlinePayment") {
              const { razorpayOrderId, amount, currency, key_id } =
                response.data;
              initiateRazorpayPayment(
                orderId,
                razorpayOrderId,
                amount,
                currency,
                key_id
              );
            } else {
              Swal.fire(
                "Payment Successful",
                "Your payment has been completed successfully.",
                "success"
              ).then(() => {
                window.location.href = "/checkout/confirmation";
              });
            }
          })
          .catch((error) => {
            Swal.fire(
              "Error",
              "An error occurred while retrying the payment.",
              "error"
            );
          });
      }
    </script>
  </body>
</html>
