<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/user/css/login.css" />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <!-- Login Form -->
    <section class="py-3 py-md-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
            <!-- Back Button -->
            <!-- <a
              href="/"
              class="btn btn-primary w btn-link text-decoration-none d-fixed"
            >
              <i class="bi bi-arrow-left"></i> Back
            </a> -->
            <div
              class="card border border-light-subtle rounded-3 shadow-sm mt-2"
            >
              <div class="card-body p-3 p-md-4 p-xl-5">
                <% if(msg){ %>
                <div class="alert alert-danger text-center"><%= msg %></div>
                <% } %>
                <div class="text-center mb-3">
                  <a href="#!">
                    <img
                      src="/public/user/images/user_logo.png"
                      alt="User Logo"
                      width="100"
                      height="100"
                    />
                  </a>
                </div>
                <h2 class="fs-6 fw-normal text-center mb-4">
                  Log in to your account
                </h2>
                <form id="loginForm" action="/user/auth/login" method="post">
                  <div class="row gy-2 overflow-hidden">
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <input
                          type="email"
                          class="form-control"
                          name="email"
                          id="email"
                          placeholder="name@example.com"
                          required
                        />
                        <label for="email" class="form-label">Email</label>
                        <div class="invalid-feedback">
                          Please enter a valid email address.
                        </div>
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <input
                          type="password"
                          class="form-control"
                          name="password"
                          id="password"
                          placeholder="Password"
                          required
                        />
                        <label for="password" class="form-label"
                          >Password</label
                        >
                        <div class="invalid-feedback">
                          Password must be at least 6 characters long.
                        </div>
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                    <div
                      class="form-group d-flex align-items-center justify-content-between"
                    >
                      <div class="form-check">
                        <label class="form-check-label">
                          <input type="checkbox" class="form-check-input" />
                          Remember me
                        </label>
                      </div>
                      <a
                        href="#"
                        class="forgot-pass"
                        data-bs-toggle="modal"
                        data-bs-target="#forgotPasswordModal"
                        >Forgot password</a
                      >
                    </div>
                    <div class="col-12">
                      <div class="d-grid my-3">
                        <button class="btn btn-primary btn-lg" type="submit">
                          Log In
                        </button>
                      </div>
                    </div>
                  </div>
                </form>

                <div class="col-12 mb-3">
                  <a href="/user/auth/google/login">
                    <button
                      class="btn btn-google d-flex align-items-center justify-content-center w-100"
                    >
                      <img
                        src="/public/user/images/Logo-google-icon-PNG.png"
                        alt="Google Icon"
                        class="icon"
                      />
                      Log In with Google
                    </button>
                  </a>
                </div>
                <div class="col-12">
                  <p class="m-0 text-center">
                    Don't have an account?
                    <a
                      href="/user/auth/signup"
                      class="link-primary text-decoration-none"
                      >Sign up</a
                    >
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Forgot Password Modal -->
    <div
      class="modal fade"
      id="forgotPasswordModal"
      tabindex="-1"
      aria-labelledby="forgotPasswordModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="forgotPasswordModalLabel">
              Forgot Password
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="forgotPasswordForm">
              <div class="form-floating mb-3">
                <input
                  type="email"
                  class="form-control"
                  name="forgotEmail"
                  id="forgotEmail"
                  placeholder="Enter your registered email"
                  required
                />
                <label for="forgotEmail" class="form-label"
                  >Enter your registered email</label
                >
                <div class="invalid-feedback">
                  Please enter a valid registered email address.
                </div>
              </div>
              <div class="d-grid">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/public/user/js/login.js"></script>
  </body>
</html>
