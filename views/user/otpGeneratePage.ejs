<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OTP Verification</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <style>
      body {
        background-color: #ffffff;
        color: #000000;
      }
      .form-control,
      .form-floating > .form-control-plaintext ~ label,
      .form-floating > .form-control:focus ~ label,
      .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #000000;
      }
      .form-floating > .form-control:focus {
        border-color: #000000;
        box-shadow: 0 0 0 0.25rem rgba(0, 0, 0, 0.25);
      }
      .btn-primary {
        background-color: #000000;
        border-color: #000000;
      }
      .btn-primary:hover {
        background-color: #333333;
        border-color: #333333;
      }
      .btn-google {
        background-color: #4285f4;
        color: #ffffff;
        border: none;
        border-radius: 0.375rem;
        font-size: 1rem;
      }
      .btn-google:hover {
        background-color: #357ae8;
        color: #ffffff;
      }
      .btn-google .icon {
        width: 20px;
        height: 20px;
        margin-right: 10px;
      }
      .otp-input {
        width: 3rem;
        height: 3rem;
        text-align: center;
        font-size: 1.25rem;
        border-radius: 0.375rem;
        border: 1px solid #000000;
        margin: 0.25rem;
        background-color: #f8f9fa;
      }
      .otp-input:focus {
        border-color: #000000;
        box-shadow: 0 0 0 0.25rem rgba(0, 0, 0, 0.25);
      }
      .timer {
        font-size: 0.875rem;
        color: #000000;
      }
    </style>
  </head>
  <body>
    <!-- OTP Verification Form -->
    <section class="py-3 py-md-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
            <div class="card border border-light-subtle rounded-3 shadow-sm">
              <div class="card-body p-3 p-md-4 p-xl-5">
                <% if(msg){ %>
                <div class="alert alert-danger text-center"><%= msg %></div>
                <% } %>
                <div class="text-center mb-3">
                  <a href="#!">
                    <img
                      src="/public/user/images/user_logo.png"
                      alt="User Logo"
                      width="100"
                      height="100"
                    />
                  </a>
                </div>
                <h2 class="fs-6 fw-normal text-center mb-4">
                  Enter the OTP sent to your email <%= email %>
                </h2>
                <form id="otpForm" action="/user/auth/verify-otp" method="post">
                  <div class="row gy-2 justify-content-center">
                    <div class="col-auto">
                      <input
                        type="hidden"
                        id="current-email"
                        name="current-email"
                        value="<%= email %>"
                      />
                      <input
                        type="hidden"
                        id="current-id"
                        name="current-id"
                        value="<%= userId %>"
                      />
                      <input
                        type="text"
                        class="otp-input"
                        name="otp1"
                        maxlength="1"
                        required
                        autofocus
                      />
                    </div>
                    <div class="col-auto">
                      <input
                        type="text"
                        class="otp-input"
                        name="otp2"
                        maxlength="1"
                        required
                      />
                    </div>
                    <div class="col-auto">
                      <input
                        type="text"
                        class="otp-input"
                        name="otp3"
                        maxlength="1"
                        required
                      />
                    </div>
                    <div class="col-auto">
                      <input
                        type="text"
                        class="otp-input"
                        name="otp4"
                        maxlength="1"
                        required
                      />
                      <input
                        type="hidden"
                        class="user"
                        name="userId"
                        value="<%= userId %>"
                      />
                    </div>
                  </div>
                  <div class="row mt-3">
                    <div class="col-12 text-center">
                      <p class="timer" id="timer">Resend OTP in 60s</p>
                      <div class="d-grid mt-3">
                        <button class="btn btn-primary btn-lg" type="submit">
                          Verify OTP
                        </button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Include Axios library (if not already included) -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const otpInputs = document.querySelectorAll(".otp-input");
        const timerElement = document.getElementById("timer");
        let timeLeft = 60;

        otpInputs.forEach((input, index) => {
          input.addEventListener("input", function () {
            if (this.value.length === 1 && index < otpInputs.length - 1) {
              otpInputs[index + 1].focus();
            }
          });
        });

        function startTimer() {
          const interval = setInterval(() => {
            timeLeft -= 1;
            timerElement.textContent = `Resend OTP in ${timeLeft}s`;
            if (timeLeft <= 0) {
              clearInterval(interval);
              timerElement.innerHTML =
                '<a href="#" id="resendLink">Resend OTP</a>';
              document
                .getElementById("resendLink")
                .addEventListener("click", function (e) {
                  e.preventDefault();
                  resendOTP();
                });
            }
          }, 1000);
        }

        function resendOTP() {
          const email = document.getElementById("current-email").value;
          const id = document.getElementById("current-id").value;
          console.log(email);
          // Call your API to resend the OTP using Axios
          axios
            .post("/user/auth/resend-otp", {
              email: email, // Replace with actual email
              _id: id,
            })
            .then((response) => {
              if (response.data) {
                alert("OTP resent successfully!");
                timeLeft = 60; // Reset the timer
                startTimer(); // Restart the timer
              } else {
                alert("Failed to resend OTP. Please try again.");
              }
            })
            .catch((error) => {
              console.error("Error resending OTP:", error);
              alert("An error occurred. Please try again.");
            });
        }

        startTimer();
      });
    </script>
  </body>
</html>
